<%- include('../layout/header.ejs') %>
<body id="kt_app_body" data-kt-app-header-fixed="true" data-kt-app-header-fixed-mobile="true" data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" data-kt-app-aside-enabled="true" data-kt-app-aside-fixed="true" data-kt-app-aside-push-toolbar="true" data-kt-app-aside-push-footer="true" class="app-default">
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <%- include('../layout/navbar.ejs') %>
            <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
                <%- include('../layout/sidebar.ejs') %>
                <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                    <div class="d-flex flex-column flex-column-fluid">
                        <div id="kt_app_toolbar" class="app-toolbar pt-5">
                            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                                <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                                    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                                <a href="/dashboard">
                                                    <i class="ki-duotone ki-home fs-1 text-gray-900">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                </a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                                            </li>
                                            <li class="breadcrumb-item text-gray-900 fw-bold lh-1">SMTP Email</li>
                                            <li class="breadcrumb-item">
                                                <i class="ki-duotone ki-right fs-4 text-gray-800 mx-n1"></i>
                                            </li>
                                            <li class="breadcrumb-item text-gray-500 lh-1">Set SMTP</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="kt_app_content" class="app-content flex-column-fluid">
                            <div id="kt_app_content_container" class="app-container container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <% if(typeof message !== 'undefined'){ %>
                                            <div class="alert alert-success alert-dismissible" role="alert"><%= message %>
                                             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                         <% } %>
                                        <% if(flash.error.length> 0){ %>
                                            <div class="alert alert-danger alert-dismissible" role="alert">
                                                <%= flash.error %>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        <% } %>
                                        <div class="card mb-5 mb-xl-10">
                                            <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                                                <div class="card-title m-0">
                                                    <h3 class="fw-bold m-0">SMTP Email</h3>
                                                </div>
                                            </div>
                                            <form class="form form-vertical" method="post" action="">
                                                <div class="card-body border-top p-9">
                                                    <div class="row gx-20">
                                                            <div class="col-md-12">
                                                                <div class="row mb-10">
                                                                    <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2 col-lg-2">Host</label>
                                                                    <div class="col-lg-10">
                                                                        <input type="text" class="form-control form-control-solid" placeholder="Enter Host" name="host" required value="<%= smtp ? smtp.host :  ''  %>"/>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-10">
                                                                    <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2 col-lg-2">Port</label>
                                                                    <div class="col-lg-10">
                                                                        <input type="text" class="form-control form-control-solid" placeholder="Enter Port" name="port" required value="<%= smtp ? smtp.port :  ''  %>"/>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-10">
                                                                    <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2 col-lg-2">Email</label>
                                                                    <div class="col-lg-10">
                                                                        <input type="text" class="form-control form-control-solid" placeholder="Enter Email" name="email" required value="<%= smtp ? smtp.email :  ''  %>"/>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-10" data-kt-password-meter="true">
                                                                    <label class="required form-label fs-5 fw-semibold col-lg-2">Password</label>
                                                                    <div class="col-lg-10 position-relative"">
                                                                        <input class="form-control form-control-solid" type="password" name="password" autocomplete="off" placeholder="Password" minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" value="<%= smtp ? smtp.password :  ''  %>" required/>
                                                                    <!--begin::Visibility toggle-->
                                                                    <button type="button" class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0" data-kt-password-meter-control="visibility">
                                                                        <i class="ki-duotone ki-eye-slash fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                                                                        <i class="ki-duotone ki-eye d-none fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                                                    </button>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-10">
                                                                    <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2 col-lg-2">Encryption</label>
                                                                        <div class="col-lg-10">
                                                                            <% if(smtp){ %>
                                                                                <select class="form-select form-select-solid" name="encryption" data-control="select2" data-dropdown-parent="#kt_header_search" data-placeholder="Select Encryption Type.." class="form-select form-select-solid">
                                                                                    <option value="SSL" <% if(smtp.encryption == "SSL") { %> selected <%} else {} %>>SSL</option>
                                                                                    <option value="TLS" <% if(smtp.encryption == "TLS") { %> selected <%} else {} %>>TLS</option>
                                                                                </select>
                                                                            <% } else { %>
                                                                                <select class="form-select form-select-solid" name="encryption" data-control="select2" data-dropdown-parent="#kt_header_search" data-placeholder="Select Encryption Type.." class="form-select form-select-solid">
                                                                                    <option value="SSL">SSL</option>
                                                                                    <option value="TLS">TLS</option>
                                                                                </select>
                                                                            <% } %>
                                                                        </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="card-footer">
                                                        <div class="col-12 d-flex justify-content-start">
                                                            <button type="submit" class="btn btn-primary me-1 mb-1" onclick="myFunction();">Submit</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    var flashSuccess = "<%= flash.success.length > 0 ? flash.success : '' %>";
    var flashError = "<%= flash.error.length > 0 ? flash.error : '' %>";
</script>
<%- include('../layout/footer.ejs') %>