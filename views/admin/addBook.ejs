<%- include('../layout/header.ejs') %>
<body id="kt_app_body" data-kt-app-header-fixed="true" data-kt-app-header-fixed-mobile="true" data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" data-kt-app-aside-enabled="true" data-kt-app-aside-fixed="true" data-kt-app-aside-push-toolbar="true" data-kt-app-aside-push-footer="true" class="app-default">
    <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
        <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
            <%- include('../layout/navbar.ejs') %>
            <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
                <%- include('../layout/sidebar.ejs') %>
                <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
                    <div class="d-flex flex-column flex-column-fluid">
                        <div id="kt_app_toolbar" class="app-toolbar pt-5">
                            <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                                <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                                    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
                                        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
                                            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                                                <a href="/dashboard" class="text-gray-500">
                                                    <i class="ki-duotone ki-home fs-1 text-gray-900">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                        <span class="path4"></span>
                                                    </i>
                                                </a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
                                            </li>
                                            <li class="breadcrumb-item text-gray-900 fw-bold lh-1">Book</li>
                                            <li class="breadcrumb-item">
                                                <i class="ki-duotone ki-right fs-4 text-gray-800 mx-n1"></i>
                                            </li>
                                            <li class="breadcrumb-item text-gray-500 lh-1">Add New</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="kt_app_content" class="app-content flex-column-fluid">
                            <div id="kt_app_content_container" class="app-container container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <% if(typeof message !== 'undefined'){ %>
                                            <div class="alert alert-success alert-dismissible" role="alert"><%= message %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        <% } %>
                                        <% if(flash.error.length> 0){ %>
                                            <div class="alert alert-danger alert-dismissible" role="alert">
                                                <%= flash.error %>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        <% } %>
                                        <div class="card mb-5 mb-xl-10">
                                            <div class="card-header border-0" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
                                                <div class="card-title m-0">
                                                    <h3 class="fw-bold m-0">Add Book</h3>
                                                </div>
                                            </div>
                                            <form class="form form-vertical" method="post" enctype="multipart/form-data" action="">
                                                <div class="card-body border-top p-9">
                                                    <div class="row gx-20">
                                                        <div class="col-md-12">
                                                            <div class="row">
                                                                <div class="mb-10">
                                                                    <label for="formFile" class="required fs-5 fw-semibold mb-2 d-block">Image</label>
                                                                    <!-- <input class="form-control " type="file" name="image" required accept="image/png, image/jpeg,image/jpg"> -->
                                                                    <div class="image-input image-input-outline image-input-empty" data-kt-image-input="true" style="background-image: url(assets/media/svg/files/blank-image.svg)">
                                                                        <div class="image-input-wrapper w-125px h-125px" style="background-image: url(assets/media/svg/files/blank-image.svg)"></div>
                                                                            <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Change avatar">
                                                                                <i class="ki-duotone ki-pencil fs-6"><span class="path1"></span><span class="path2"></span></i>
                                                                                <input type="file" name="image" accept=".png, .jpg, .jpeg"  id="avatar-input" />
                                                                                <input type="hidden" name="avatar_remove" />
                                                                            </label>
                                                                            <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" data-bs-dismiss="click" title="Cancel avatar">
                                                                                <i class="ki-outline ki-cross fs-3"></i>
                                                                            </span>
                                                                            <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" data-bs-dismiss="click"title="Remove avatar">
                                                                                <i class="ki-outline ki-cross fs-3"></i>
                                                                            </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="mb-10">
                                                                        <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2">Title</label>
                                                                        <input type="text" class="form-control" name="name" placeholder="Enter name" pattern="^[A-Za-z0-9 ,.-&]+$" required>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <div class="mb-10">
                                                                        <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2">Language</label>
                                                                        <input type="text" class="form-control" name="language" placeholder="Set language" pattern="^[A-Za-z0-9 ,.-&]+$" required>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <div class="mb-10">
                                                                        <label for="exampleFormControlInput1" class="required fs-5 fw-semibold mb-2">Book Access</label>
                                                                        <select class="form-select" name="access_type" data-control="select2" data-placeholder="Select Book Access Type" class="form-select form-select-sm form-select-solid" required>
                                                                            <option value="">Select Access Type..</option>
                                                                            <option value="free">Free</option>
                                                                            <option value="paid">Paid</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    <div class="mb-10">
                                                                        <label for="formFile" class="required fs-5 fw-semibold mb-2">Category</label>
                                                                        <select class="form-select" id="categoryDropdown" name="categoryId" data-control="select2" data-placeholder="Select Category" required>
                                                                            <% if(category.length> 0) { %>
                                                                                <option value="" disabled selected>Select category</option>
                                                                            <% for(let i=0; i < category.length; i++) { %>
                                                                                <option value="<%= category[i]._id %>">
                                                                                    <%= category[i].name %>
                                                                                </option>
                                                                                <% } } %>
                                                                        </select>
                                                                        <input type="hidden" id="hiddenInputField" name="selectedCategory" value="">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <div class="mb-10">
                                                                        <label for="formFile" class="required fs-5 fw-semibold mb-2" required>Subcategory</label>
                                                                        <select class="form-select" aria-label="Select example" name="subcategoryDropdown" id="subcategoryDropdown" data-control="select2" data-placeholder="Select Subcategory" required>
                                                                            <% if(subcategory.length > 0) { %>
                                                                                <option value="" disabled selected>Select Subcategory</option>
                                                                                <% for(let j = 0; j < subcategory.length; j++) { %>
                                                                                    <option value="<%= subcategory[j]._id %>" data-categoryid="<%= subcategory[j].categoryId._id %>"><%= subcategory[j].name %></option>
                                                                                <% } %>
                                                                            <% } %>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <div class="mb-10">
                                                                        <label for="formFile" class="required fs-5 fw-semibold mb-2" required>Author</label>
                                                                        <select class="form-select" name="authorId" data-control="select2" data-placeholder="Select Author" required>
                                                                            <% if(author.length> 0) { %>
                                                                                <option value="" disabled selected>Select Author</option>
                                                                            <% for(let i=0; i < author.length; i++) { %>
                                                                                <option value="<%= author[i]._id %>">
                                                                                    <%= author[i].name %>
                                                                                </option>
                                                                                <% } } %>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="mb-10">
                                                                        <label for="formFile" class="required fs-5 fw-semibold mb-2">PDF</label>
                                                                        <input type="file" class="form-control"placeholder="Upload PDF" name="pdf" required  accept="application/pdf, application/vnd.ms-excel"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="mb-10">
                                                                <label for="exampleFormControlInput1" class="fs-5 fw-semibold mb-2">Description</label>
                                                                <!-- <textarea rows="4" name="description" class="tox-target"id="description" placeholder="Add Desciprtion"required></textarea> -->
                                                                <div id="description"></div>
                                                                <input name="description" type="hidden">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="row">
                                                                <div class="col-md-2">
                                                                    <div class="row"> 
                                                                        <label for="formswitch" class="fs-5 fw-semibold mb-2 col-md-5">Download</label>
                                                                        <div class="col-md-3">
                                                                            <div class="mb-10">
                                                                                <div class="form-check form-switch">
                                                                                    <input class="form-check-input" type="checkbox" name="download" id="flexSwitchDefault"/>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <div class="row">
                                                                        <label for="formswitch" class="fs-5 fw-semibold mb-2 col-md-5">Is Enable</label>
                                                                        <div class="col-md-3">
                                                                            <div class="mb-10">
                                                                                <div class="form-check form-switch">
                                                                                <input class="form-check-input" type="checkbox" name="is_active" id="flexSwitchDefault"/>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <div class="col-12 d-flex justify-content-end">
                                                    <button type="submit" class="btn btn-primary me-1 mb-1" onclick="myFunction();">Submit</button>
                                                    <a href="/view-book" class="btn btn-secondary ms-3 mb-1">Back</a>
                                                </div>
                                            </div>
                                        </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../layout/footer.ejs') %>